@{
    Layout = "_Layout";
}

@using BeMyGuest.ViewModels
@model RegisterViewModel

<div class="container">
    <h1>Register New User</h1>
    <hr>

    @if(ViewBag.Error != null)
    {
        <h3>@ViewBag.Error, Please try again.</h3>
    }
    <div class="card mx-auto" style="width: 36rem;">
        <div class="card-body">
            <h5 class="card-title text-center">Log In</h5>
            <p class="card-text text-center text-muted">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                {
                <div class="form-control-lg form-row">
                    @Html.LabelFor(user => user.Email)
                    @Html.TextBoxFor(user => user.Email)
                </div>

                <div class="form-control-lg form-row">
                    @Html.LabelFor(user => user.Password)
                    @Html.PasswordFor(user => user.Password)
                </div>

                <div class="form-group-lg form-row">
                    @Html.LabelFor(user => user.ConfirmPassword)
                    @Html.PasswordFor(user => user.ConfirmPassword)
                </div>
                <div class="card-text text-center text-muted">
                    <input type="submit" value="Register" class="btn btn-outline-info">
                </div>
                }
        </div>
    </div>