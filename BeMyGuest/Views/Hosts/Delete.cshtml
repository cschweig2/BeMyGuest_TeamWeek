@{
    Layout ="_Layout";
}

@model BeMyGuest.Models.Host

<h2>Are you sure you want to delete this host?</h2>
<hr />

<div class="card mx-auto" style="width: 36rem;">
    <div class="card-body">
        <div class="form-group row">
            @Html.DisplayNameFor(model => model.HostName): @Html.DisplayFor(model => model.HostName)
            @using (Html.BeginForm())
            {
                <input type="submit" value="Delete" class="btn btn warning" />
            }
        </div>
    </div>
</div>

<h3>@Html.ActionLink("Back to Host Details", "Details", new {id = host.HostId}) || @Html.ActionLink("Back to Hosts", "Index")</h3>