@{
    Layout = "_Layout";
}

@model BeMyGuest.Models.Guest

<h2>Add a New Guest</h2>
<hr />
@using (Html.BeginForm())
{
    <div class="card mx-auto" style="width: 48rem;">
        <div class="card-body">
            <div class="form-group row">

                @* @Hidden.For("CovidDataId") *@

                @Html.LabelFor(model => model.Name, new { @class="col-sm-3 col-form-label" })
                @Html.TextBoxFor(model => model.Name, new { @class="col-sm-8", @placeholder="e.g. Janey Smith"})
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.Email, new { @class="col-sm-3 col-form-label" })
                @Html.TextBoxFor(model => model.Email, new { @class="col-sm-8 col-form-label", @placeholder ="janey@example.com"  })
            </div>
            <div class="form-group row">
                <input type="submit" value="Add New Guest" class="btn btn-outline-info"/>
            </div>
        </div>
    </div>
}

<h3>@Html.ActionLink("Show all guests", "Index")</h3>