@{
    Layout = "_Layout";
}

@model BeMyGuest.Models.Guest

<h2>Edit</h2>
<hr />
<h4>Edit this Guest: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    <div class="card mx-auto" style="width: 36rem;">
        <div class="card-body">
            @Html.HiddenFor(model => model.GuestId)
            <div class="form-group row">
                @Html.LabelFor(model => model.Name, new { @class="col-sm-3 col-form-label" })
                @Html.TextBoxFor(model => model.Name, new { @class="col-sm-8 col-form-label" })
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.Email, new { @class="col-sm-3 col-form-label" })
                @Html.TextBoxFor(model => model.Email, new { @class="col-sm-8 col-form-label", @placeholder ="janey@example.com" })
            </div>
            <div class="form-group row">
                <input type="submit" value="Save" class="btn btn-outline-info">
            </div>
    </div>
    </div>
}

<h3>@Html.ActionLink("Show all guests", "Index", "Guests")</h3>