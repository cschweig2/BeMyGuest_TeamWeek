@{
    Layout = "_Layout";
}

@model BeMyGuest.Models.Event

<h2>Delete Event</h2>
<hr />
<h4>Are you sure you want to delete this event?</h4>
<div class="card mx-auto" style="width: 36rem;">
    <div class="card-body">
        <div class="form-group row">
            @Html.DisplayNameFor(model => model.EventTitle): @Html.DisplayFor(model => model.EventTitle)
            @using (Html.BeginForm())
            {
                <input type="submit" value="Delete" class="btn btn warning" />
            }
        </div>
    </div>
</div>

<h3>@Html.ActionLink("Back to Event Details", "Details", new {id = Model.EventId}) || @Html.ActionLink("Back to Events", "Index")</h3>